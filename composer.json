{
    "name": "vrkansagara/vrkansagara.in",
    "description": "Personal blog of Vallabh Kansagara (VRKANSAGARA)",
    "type": "project",
    "license": "BSD-3-Clause",
    "keywords": [
        "vrkansagara",
        "Vallabh",
        "Kansagara",
        "Personal"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^7.3",
        "laminas/laminas-component-installer": "^1.0 || ^2.1",
        "laminas/laminas-development-mode": "^3.2",
        "laminas/laminas-mvc": "^3.1.1",
        "laminas/laminas-cache": "^2.9",
        "symfony/console": "^5.1",
        "laminas/laminas-mail": "^2.12",
        "laminas/laminas-captcha": "^2.9",
        "laminas/laminas-recaptcha": "^3.2",
        "laminas/laminas-form": "^2.15",
        "laminas/laminas-session": "^2.9",
        "laminas/laminas-i18n": "^2.10",
        "laminas/laminas-test": "^3.4"
        "laminas/laminas-i18n": "^2.10",
        "laminas/laminas-crypt": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "module/Application/src/",
            "PhlySimplePage\\": "module/vendor/phly/PhlySimplePage/src",
            "PhlyBlog\\": "module/vendor/phly/PhlyBlog/src/",
            "PhlyContact\\": "module/vendor/phly/PhlyContact/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": "module/Application/test/",
            "PhlySimplePageTest\\": "module/vendor/phly/PhlySimplePage/test/",
            "PhlyBlogTest\\": "module/vendor/phly/PhlyBlog/test/",
            "PhlyContactTest\\": "module/vendor/phly/PhlyContact/test/"
        }
    },
    "scripts": {
        "cs-check": "./vendor/bin/phpcs",
        "cs-fix": "./vendor/bin/phpcbf",
        "development-disable": [
            "laminas-development-mode disable",
            "@serve"
        ],
        "development-enable": [
            "laminas-development-mode enable",
            "@serve"
        ],
        "development-status": "laminas-development-mode status",
        "post-create-project-cmd": [
            "@development-enable",
            "php bin/update-gitignore.php",
            "php -r 'if (file_exists(\"bin/remove-package-artifacts.php\")) include \"bin/remove-package-artifacts.php\";'",
            "php -r 'if (file_exists(\"CHANGELOG.md\")) unlink(\"CHANGELOG.md\");'"
        ],
        "serve": [
            "sudo rm -rf data/cache/static-page-data/*",
            "/usr/bin/php7.3 composer.phar install -vv",
            "/usr/bin/php7.3 composer.phar dump-autoload",
            "if sudo lsof -t -i:8080; then sudo kill -9 $(sudo lsof -t -i:8080 ); fi",
            "sudo chgrp -R www-data data",
            "sudo chmod -R ug+rwx data",
            "php -S 0.0.0.0:8080 -t public"
        ],
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "cs-check": "Run coding standards checks.",
        "cs-fix": "Automatically fix coding standard issues.",
        "development-disable": "Disable development mode.",
        "development-enable": "Enable development mode.",
        "development-status": "Detail whether or not the application is in development mode.",
        "serve": "Start the built-in PHP web server and serve the application.",
        "test": "Run unit tests."
    },
    "require-dev": {
        "laminas/laminas-developer-tools": "^2.0",
        "squizlabs/php_codesniffer": "^3.5",
        "laminas/laminas-code": "^3.4",
        "laminas/laminas-cli": "^0.1.4"
    }
}
