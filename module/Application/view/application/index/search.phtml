<div class="container ">

    <h2>Search result...</h2>

  <table>
      <?php foreach($info as $key => $value): ?>
      <tr>
        <td><?=$key?></td>

        <?php if (!is_array($value)) : ?>
        <td><?=$value?></td>
        <?php else: ?>
          <td>
              <?php foreach($value as $k => $v): ?>
              <tr>
                <td><?=$k?></td>
                  <?php if (!is_array($v)) : ?>
                    <td><?=$v?></td>
                  <?php else: ?>
                    <td>
                      <pre>
                        <?=print_r($v)?>
                      </pre>
                    </td>
                  <?php endif;?>
              </tr>
              <?php endforeach;?>
          </td>
        <?php endif;?>
      </tr>
      <?php endforeach;?>
  </table>
</div>